<Window x:Class="Othello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Othello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Grid.Column="0">
            <Label FontSize="40" HorizontalAlignment="Center" FontWeight="Bold" Margin="5 10 5 10">Hra Othello</Label>
            <Button Margin="20 10"  Command="{Binding StartCommand}" Background="Green" Foreground="White">Start Game</Button>
        </StackPanel>
        
        <ItemsControl ItemsSource="{Binding Squares}" Grid.Row="0" Grid.Column="1" Margin="5, 5, 5, 5">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Rows="{Binding GridSize}"
                         Columns="{Binding GridSize}" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>

            <!--Šablona pro jednotlivé karty (budou to obyčejná tlačítka s TextBlockem uvnitř) -->
            <ItemsControl.ItemTemplate>
                <DataTemplate> 
                    <!--Command: co se provede po kliknutí na tlačítko karty-->
                    <!--CommandParametr: předá se kliknutá karta jako parametr příkazu -->
                    <Button 
                    Command="{Binding DataContext.SquareClickCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                    CommandParameter="{Binding}"
                    Background="{Binding BackgroundColor}"
                    FontSize="24">
                    </Button>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Label Grid.Row="1" Grid.ColumnSpan="2" HorizontalAlignment="Center" VerticalAlignment="Center" Content="{Binding Label}"/>
    </Grid>
</Window>
